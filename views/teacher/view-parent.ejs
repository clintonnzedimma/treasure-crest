<!doctype html>
<html class="no-js" lang="">
<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
<% include ../partials/head-tag %>

<body>
    <!-- Preloader Start Here -->

    <!-- Preloader End Here -->
    <div id="wrapper" class="wrapper bg-ash">

        <!-- Header Menu Area Start Here -->
        <% include ../partials/header %>
        <!-- Header Menu Area End Here -->

        <!-- Page Area Start Here -->
        <div class="dashboard-page-one">
            <!-- Sidebar Area Start Here -->
            <% include ../partials/sidebar %>
            <!-- Sidebar Area End Here -->
            <div class="dashboard-content-one">
                <!-- Breadcubs Area Start Here -->
                <div class="breadcrumbs-area">
                    <h3>About parents</h3>
                    <ul>
                        <li>
                            <a href="/teachers">Home</a>
                        </li>
                        <li>parent Details</li>
                    </ul>
                </div>
                <!-- Breadcubs Area End Here -->
                <!-- parent Details Area Start Here -->
                <div class="card height-auto">
                    <div class="card-body">
                        <div class="heading-layout1">
                            <div class="item-title">
                            </div>
                            <div class="dropdown">
                                <a class="dropdown-toggle" href="#" role="button" data-toggle="dropdown"
                                    aria-expanded="false">...</a>


                            </div>
                        </div>
                        <div class="single-info-details">

                            <div class="item-content">
                                <div class="header-inline item-header">
                                    <h2><%= parent.firstname + " " +parent.lastname; %></h2>
                                    <h3 class="text-dark-medium font-medium"></h3>
                                    <div class="header-elements">
                                        <ul>
                                            <li><a href="/teachers/edit-parent/<%= parent.id %>"><i
                                                        class="far fa-edit"></i></a></li>
                                            <li><a href="#"><i class="fas fa-print"></i></a></li>
                                            <li><a href="#"><i class="fas fa-download"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="info-table table-responsive">
                                    <table class="table text-nowrap">
                                        <tbody>

                                            <tr>
                                                <td>Name:</td>
                                                <td class="font-medium text-dark-medium">
                                                    <%= parent.firstname + " " + parent.lastname; %>
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Gender:</td>
                                                <td class="font-medium text-dark-medium"> <%= parent.gender %> </td>
                                            </tr>

                                            <tr>
                                                <td>Religion:</td>
                                                <td class="font-medium text-dark-medium"><%= parent.religion; %></td>
                                            </tr>


                                            <tr>
                                                <td>Occupation:</td>
                                                <td class="font-medium text-dark-medium">
                                                    <%= parent.occupation; %>
                                                </td>
                                            </tr>


                                            <tr>
                                                <td>Phone:</td>
                                                <td class="font-medium text-dark-medium">
                                                    <a href="tel:<%= parent.phone ; %>">
                                                        <%= parent.phone ; %>
                                                    </a>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Email:</td>
                                                <td class="font-medium text-dark-medium"><%= parent.email ; %> /
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Address:</td>
                                                <td class="font-medium text-dark-medium">
                                                    <%= parent.address; %>
                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- parent Details Area End Here -->
                <% include ../partials/footer-tag %>
            </div>
        </div>
        <!-- Page Area End Here -->
    </div>
    <!-- jquery-->
    <% include ../partials/js-files %>

</body>

</html>