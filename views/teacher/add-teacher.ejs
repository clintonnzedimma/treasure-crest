<!doctype html>
<html class="no-js" lang="">


<meta http-equiv="content-type" content="text/html;charset=UTF-8" />

<% include ../partials/head-tag %>

<body>
    <!-- Preloader Start Here -->
    <div id="preloader"></div>
    <!-- Preloader End Here -->
    <!-- Login Page Start Here -->
    <div class="login-page-wrap">
        <div class="login-page-content">
            <div class="login-box">
                <div class="item-logo">
                    <img src="/img/logo/logo.jpg" alt="logo">
                </div>
                <div class="dismiss-alart">
                    <% include ../partials/message %>
                </div>

                <form method="POST" action="/teachers/add" class="login-form">
                    <div class="form-group">
                        <label>Firstname</label>
                        <input name="firstname" type="text" placeholder="Firstname" class="form-control">
                        <i class="far fa-user"></i>
                    </div>
                    <div class="form-group">
                        <label>Lastname</label>
                        <input name="lastname" type="text" placeholder="Lastname" class="form-control">
                        <i class="far fa-user"></i>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input name="email" type="email" placeholder="Enter Email" class="form-control">
                        <i class="far fa-envelope"></i>
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input name="phone" type="phone" placeholder="Enter phone" class="form-control">
                        <i class="fas fa-phone"></i>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input name="password" type="password" placeholder="Enter password" class="form-control">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input name="conPassword" type="password" placeholder="Enter password" class="form-control">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="form-group d-flex align-items-center justify-content-between">
                        <div class="form-check">
                            <input name="remember_me" type="checkbox" class="form-check-input" id="remember-me">
                            <label for="remember-me" class="form-check-label">Remember Me</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="login-btn">Register</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <!-- Login Page End Here -->
    <!-- jquery-->
    <script src="/admin-panel-asset/js/jquery-3.3.1.min.js"></script>
    <!-- Plugins js -->
    <script src="/admin-panel-asset/js/plugins.js"></script>
    <!-- Popper js -->
    <script src="/admin-panel-asset/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="/admin-panel-asset/js/bootstrap.min.js"></script>
    <!-- Scroll Up Js -->
    <script src="/admin-panel-asset/js/jquery.scrollUp.min.js"></script>
    <!-- Custom Js -->
    <script src="/admin-panel-asset/js/main.js"></script>

</body>

</html>