<!doctype html>
<html class="no-js" lang="">
<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
<% include ../partials/head-tag %>

<body>

    <% const isActive = "media"; %>

    <div id="wrapper" class="wrapper bg-ash">

        <!-- Header Menu Area Start Here -->
        <% include ../partials/header %>
        <!-- Header Menu Area End Here -->

        <!-- Page Area Start Here -->
        <div class="dashboard-page-one">
            <!-- Sidebar Area Start Here -->
            <% include ../partials/sidebar %>
            <!-- Sidebar Area End Here -->
            <div class="dashboard-content-one">
                <!-- Breadcubs Area Start Here -->
                <div class="breadcrumbs-area">
                    <h3>Blog Post</h3>
                    <ul>
                        <li>
                            <a href="/teachers">Home</a>
                        </li>
                        <li>Blog Post</li>
                    </ul>
                </div>
                <!-- Breadcubs Area End Here -->
                <!-- Add Blog Post Area Start Here -->
                <div class="card height-auto">
                    <div class="card-body">
                        <div class="heading-layout1">
                            <div class="item-title">
                                <h3> Blog Post</h3>
                            </div>
                            <div class="dropdown">
                                <a class="dropdown-toggle" href="#" role="button" data-toggle="dropdown"
                                    aria-expanded="false">...</a>

                                <div class="dropdown-menu dropdown-menu-right">

                                </div>
                            </div>



                        </div>
                        <div class="dismiss-alart">
                            <% include ../partials/message %>
                        </div>


                        <div class="table-responsive ">
                            <table class="table display data-table text-nowrap">
                                <thead>
                                    <tr>
                                        <th>Post photo</th>
                                        <th>Post Title</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% posts.forEach(function (post, index, arr){ %>
                                    <tr>
                                        <td class="text-center">
                                            <a href="#modal">
                                                <img style="max-width: 70px;" src="<%= post.photo %>"
                                                    alt="Blog post photo">
                                            </a>
                                        </td>

                                        <td><%= post.title %> </td>

                                        <td><%= post.date %></td>
                                        <td>
                                            <div class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                                                    aria-expanded="false">
                                                    <span class="flaticon-more-button-of-three-dots"></span>
                                                </a>
                                                <div class="dropdown-menu dropdown-menu-right">

                                                    <a class="dropdown-item"
                                                        href="/teachers/media/blog/<%= post.id%>/edit"><i
                                                            class="fas fa-pen text-orange-peel "></i>Edit</a>
                                                    <a class="dropdown-item"
                                                        href="/teachers/media/blog/<%= post.id%>/delete"><i
                                                            class="fas fa-trash text-orange-red"></i>Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>


                        <a href="blog/add" type="button" class="btn-fill-lg bg-blue-dark btn-hover-yellow">
                            New Post
                            <i class="fas fa-plus"></i>
                        </a>

                    </div>
                </div>
                <!-- Results Sheet Area End Here -->
                <% include ../partials/footer-tag %>
            </div>
        </div>
        <!-- Page Area End Here -->
    </div>
    <!-- jquery-->
    <% include ../partials/js-files %>

</body>

</html>